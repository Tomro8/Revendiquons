<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingBottom="24dp"
    android:background="@drawable/unique_border"
    >

    <com.example.revendiquons.widgets.myCompoundBtn
        android:id="@+id/up_vote_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:background="@drawable/up_button_background"
        android:button="@android:color/transparent" />

    <com.example.revendiquons.widgets.myCompoundBtn
        android:id="@+id/down_vote_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/up_vote_btn"
        android:layout_marginStart="12dp"
        android:background="@drawable/down_button_background"
        android:button="@android:color/transparent" />

    <com.example.revendiquons.widgets.myCompoundBtn
        android:id="@+id/white_vote_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/down_vote_btn"
        android:layout_marginStart="12dp"
        android:background="@drawable/neutral_btn_background"
        android:button="@android:color/transparent" />

    <TextView
        android:id="@+id/drop_down_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/white_vote_btn"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_horizontal"
        />

</android.support.constraint.ConstraintLayout>