<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleLogin" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextInfo" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SwitchButtonLogin" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PropositionScore" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ColorScorePositive" parent="PropositionScore">
        <item name="android:textColor">#15b210</item>
    </style>
    <style name="ColorScoreNegative" parent="PropositionScore">
        <item name="android:textColor">#c9231a</item>
    </style>
    <style name="ColorScoreNeutral" parent="PropositionScore">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PropositionTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
